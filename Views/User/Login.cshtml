@model Login

@{
    ViewData["Title"] = "Login Page";
}

<!-- Include SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div id="responseMessage" class=" container mt-3 w-50"></div>

<div class="container w-50 border border-2 shadow mt-3 py-3 px-3">
    <h3>Login</h3>
    <br />
    <form asp-controller="User" asp-action="Login" id="loginForm" method="post">
        <div class="mt-3">
            <label class="control-label mt-1" for="email">Email:</label>
            <div class="mt-1">
                <input type="email" class="form-control" asp-for="c_email" id="email" placeholder="Enter email">
            </div>
            <span class="text-danger" asp-validation-for="c_email"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="pwd">Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="c_password" id="pwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="c_password"></span>
        </div>
        <div class="mt-3">
            <div class="mt-1">
                <button type="submit" id="login" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>
</div>

<script>
 
        var message = "@TempData["message"]";

        if (message) {
         var responseDiv = document.getElementById("responseMessage");
            responseDiv.innerHTML = `<div class="alert ${message === "Login Successfully" ? 'alert-success' : 'alert-danger'}">${message}</div>`;
            Swal.fire({
                icon: message === "Login Successfully" ? 'success' : 'error',
                title: message === "Login Successfully" ? 'Success!' : 'Oops...',
                text: message

            });
            }
</script>
